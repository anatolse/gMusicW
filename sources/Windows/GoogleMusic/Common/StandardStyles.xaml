                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.2" Value="8" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="10" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.6" Value="12" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.8" Value="14" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:1.0" Value="16" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:1.2" Value="12" />
                                        </ObjectAnimationUsingKeyFrames>

                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Bar3" Storyboard.TargetProperty="Height" >
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="16" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.2" Value="12" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="10" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.6" Value="8" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.8" Value="10" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:1.0" Value="12" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:1.2" Value="14" />
                                        </ObjectAnimationUsingKeyFrames>

                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Bar4" Storyboard.TargetProperty="Height" >
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="10" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.2" Value="8" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="10" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.6" Value="12" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.8" Value="14" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:1.0" Value="16" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:1.2" Value="12" />
