<UserControl
    x:Class="OutcoldSolutions.GoogleMusic.Views.SnappedPlayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:OutcoldSolutions.Controls" xmlns:controls2="using:OutcoldSolutions.GoogleMusic.Controls"
    mc:Ignorable="d"
    d:DesignHeight="700"
    d:DesignWidth="320">

    <Grid DataContext="{Binding Path=BindingModel, Mode=OneTime}" x:Name="SnappedGrid" Margin="0, 0, 0, 10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0" 
               Margin="32" 
               Height="256" 
               Width="256" 
               Source="{Binding Path=CurrentSong.Metadata.AlbumArtUrl, Converter={StaticResource AlbumArtUrlToImageConverter}, ConverterParameter=256, Mode=OneWay}"
               Stretch="None"/>

        <StackPanel Grid.Row="1" Margin="32, 0" Visibility="{Binding Path=CurrentSong, Mode=OneWay, Converter={StaticResource NullToInvisibilityConverter}}">
            <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource TitleTextStyle}" Text="{Binding Path=CurrentSong.Title, Mode=OneWay}" TextWrapping="NoWrap" TextTrimming="WordEllipsis"/>
            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource SubtitleTextStyle}" Text="{Binding Path=CurrentSong.Artist, Mode=OneWay}" TextWrapping="NoWrap" TextTrimming="WordEllipsis"/>
        </StackPanel>
       
        <StackPanel Margin="0, 20" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Visibility="{Binding Path=CurrentSong, Mode=OneWay, Converter={StaticResource NullToInvisibilityConverter}}">

            <controls:AppBarToggleButton Style="{StaticResource ShuffleAppBarButtonStyle}" 
                                                     IsChecked="{Binding Path=IsShuffleEnabled, Mode=OneWay}"
                                                     Command="{Binding Path=ShuffleCommand, Mode=OneTime}"/>
            <controls:AppBarToggleButton Style="{StaticResource RepeatAllAppBarButtonStyle}" 
                                                     IsChecked="{Binding Path=IsRepeatAllEnabled, Mode=OneWay}"
                                                     Command="{Binding Path=RepeatAllCommand, Mode=OneTime}"/>

        </StackPanel>

        <Grid Grid.Row="3" 
                    Margin="32, 0, 32, 20" 
                    Visibility="{Binding Path=CurrentSong, Mode=OneWay, Converter={StaticResource NullToInvisibilityConverter}}"
                    VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Style="{StaticResource SmallTextStyle}" VerticalAlignment="Center" HorizontalAlignment="Left">Plays:</TextBlock>
            <TextBlock Grid.Column="1" Style="{StaticResource SmallTextStyle}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="7, 0, 0, 0" Text="{Binding Path=CurrentSong.PlayCount, Mode=OneWay}"  />

            <controls2:Rating Grid.Column="1" x:Name="Rating" HorizontalAlignment="Right" ValueChanged="RatingOnValueChanged"/>
        </Grid>

        <Grid Grid.Row="4" Margin="32, 0" Visibility="{Binding Path=CurrentSong, Mode=OneWay, Converter={StaticResource NullToInvisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="0">
                <TextBlock Style="{StaticResource SmallTextStyle}" Text="{Binding Path=CurrentPosition, Mode=OneWay, Converter={StaticResource DoubleToTimeConverter}}" />
                <TextBlock Style="{StaticResource SmallTextStyle}" Text="/"  Margin="5, 0"/>
                <TextBlock Style="{StaticResource SmallTextStyle}" Text="{Binding Path=CurrentSong.Duration, Converter={StaticResource DoubleToTimeConverter}, Mode=OneWay}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Visibility="{Binding Path=IsDownloaded, Mode=OneWay, Converter={StaticResource BooleanToInvisibilityConverter}}">
                <TextBlock HorizontalAlignment="Left" Style="{StaticResource SmallTextStyle}">Buffering (</TextBlock>
                <TextBlock Style="{StaticResource SmallTextStyle}"  
                                        Text="{Binding Path=DownloadProgress, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter=P0}"
                                        HorizontalAlignment="Stretch"
                                        TextAlignment="Right" />
                <TextBlock HorizontalAlignment="Left" Style="{StaticResource SmallTextStyle}">)</TextBlock>
            </StackPanel>
        </Grid>

        <Slider Grid.Row="5" 
                Width="Auto"
                Margin="32, 20"
                ThumbToolTipValueConverter="{StaticResource DoubleToTimeConverter}"
                Padding="0"
                Value="{Binding Path=CurrentPosition, Mode=TwoWay}"
                Maximum="{Binding Path=TotalSeconds, Mode=OneWay}"
                Visibility="{Binding Path=CurrentSong, Mode=OneWay, Converter={StaticResource NullToInvisibilityConverter}}" />
        
        <StackPanel Margin="0, 0, 0, 0" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="6" Visibility="{Binding Path=CurrentSong, Mode=OneWay, Converter={StaticResource NullToInvisibilityConverter}}">

            <Button Style="{StaticResource SkipBackAppBarButtonStyle}" 
                    Command="{Binding Path=SkipBackCommand, Mode=OneTime}"
                    VerticalAlignment="Top"/>
            <Button Style="{StaticResource PlayAppBarButtonStyle}"  
                    Visibility="{Binding Path=IsPlaying, Mode=OneWay, Converter={StaticResource BooleanToInvisibilityConverter}}" 
                    Command="{Binding Path=PlayCommand, Mode=OneTime}"
                    VerticalAlignment="Top"/>
            <Button Style="{StaticResource PauseAppBarButtonStyle}" 
                    Visibility="{Binding Path=IsPlaying, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" 
                    Command="{Binding Path=PauseCommand, Mode=OneTime}"
                    VerticalAlignment="Top"/>
            <Button Style="{StaticResource SkipAheadAppBarButtonStyle}"  
                    Command="{Binding Path=SkipAheadCommand, Mode=OneTime}"
                    VerticalAlignment="Top"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.RowSpan="7" Visibility="{Binding Path=CurrentSong, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Style="{StaticResource BodyTextStyle}">Queue is empty</TextBlock>
            <Button Style="{StaticResource AddAppBarButtonStyle}" Click="AddToQueue" />
        </StackPanel>
        
    </Grid>
</UserControl>
